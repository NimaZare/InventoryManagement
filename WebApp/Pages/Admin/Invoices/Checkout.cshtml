@page
@model WebApp.Pages.Admin.Invoices.CheckoutModel

@{
    var pageTitle = $"{Resources.DataDictionary.Checkout}";
    ViewData["Title"] = pageTitle;
}

<partial name="PartialViews/_DisplayPageMessages" />
<partial name="PartialViews/_DisplayToastMessages" />

@if (!Model.HasDebt)
{
    <div class="container my-0 my-sm-1 my-md-3 my-lg-4">
        <div class="row">
            <fieldset disabled>
                <legend>
                    @(pageTitle)
                </legend>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InvoiceViewModel.Customer)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InvoiceViewModel.Customer.FullName)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InvoiceViewModel.FactorsTotalAmount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InvoiceViewModel.FactorsTotalAmount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InvoiceViewModel.Paid)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InvoiceViewModel.Paid)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InvoiceViewModel.Debt)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.InvoiceViewModel.Debt)
                    </dd>
                    <dt class="col-sm-2">
                        @(Resources.DataDictionary.DebtStatus)
                    </dt>
                    <dd class="col-sm-10">
                        @if (Model.InvoiceViewModel.Debt > 0)
                        {
                            @(Resources.Messages.CustomerHasDebt)
                        }
                        else
                        {
                            @(Resources.Messages.CustomerHasNoDebt)
                        }
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InvoiceViewModel.UpdateDateTime)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.InvoiceViewModel.UpdateDateTime.ToString("HH:mm:ss yyyy-MM-dd", CultureInfo.InvariantCulture))
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.InvoiceViewModel.InsertDateTime)
                    </dt>
                    <dd class="col-sm-10">
                        @(Model.InvoiceViewModel.InsertDateTime.ToString("HH:mm:ss yyyy-MM-dd", CultureInfo.InvariantCulture))
                    </dd>
                </dl>
            </fieldset>
            <div>
                <a asp-page="./Print" class="text-decoration-none btn btn-primary">
                    @(Resources.ButtonCaptions.SetCheckout)
                </a>
                &nbsp;
                <a asp-page="Index" class="text-decoration-none">
                    @(Resources.ButtonCaptions.BackToList)
                </a>
            </div>
        </div>
    </div>
}
else
{
    <a asp-page="Index" class="text-decoration-none">
        @(Resources.ButtonCaptions.BackToList)
    </a>
}
