@page
@model WebApp.Pages.Admin.Factors.DetailsModel

@{
    var pageTitle = $"{Resources.ButtonCaptions.Details} {Resources.DataDictionary.Factor}";
    ViewData["Title"] = pageTitle;
}

<partial name="PartialViews/_DisplayPageMessages" />
<partial name="PartialViews/_DisplayToastMessages" />

<div class="container my-0 my-sm-2 my-md-3 my-lg-4">
    <div class="row">
        <fieldset disabled>
            <legend>
                @(pageTitle)
            </legend>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @(Resources.DataDictionary.FactorID)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FactorViewModel.ID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FactorViewModel.Customer)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FactorViewModel.Customer.FullName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FactorViewModel.TotalAmount)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FactorViewModel.TotalAmount)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FactorViewModel.UpdateDateTime)
                </dt>
                <dd class="col-sm-10">
                    @(Model.FactorViewModel.UpdateDateTime.ToString("HH:mm:ss yyyy-MM-dd", CultureInfo.InvariantCulture))
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FactorViewModel.InsertDateTime)
                </dt>
                <dd class="col-sm-10">
                    @(Model.FactorViewModel.InsertDateTime.ToString("HH:mm:ss yyyy-MM-dd", CultureInfo.InvariantCulture))
                </dd>
                <partial name="PartialViews/_ShowFactorProductsList" model="Model.FactorProductList" />
            </dl>
        </fieldset>
        <div>
            <a asp-page="Index" class="text-decoration-none">
                @(Resources.ButtonCaptions.BackToList)
            </a>
        </div>
    </div>
</div>
