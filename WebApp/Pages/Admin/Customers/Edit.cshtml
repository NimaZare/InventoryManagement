@page
@model WebApp.Pages.Admin.Customers.EditModel

@{
    var pageTitle = $"{Resources.ButtonCaptions.Edit} {Resources.DataDictionary.Customer}";
    ViewData["Title"] = pageTitle;
}

<partial name="PartialViews/_DisplayPageMessages" />
<partial name="PartialViews/_DisplayToastMessages" />

<form method="post">
    <div class="container my-0 my-sm-1 my-md-2 my-lg-2">
        <div class="row">
            <div class="col-12 p-3 col-md-8 offset-md-2 p-md-4 col-lg-6 offset-lg-3 p-lg-5 border border-2 rounded-3 shadow-lg">
                <fieldset>
                    <legend class="text-center">
                        @(pageTitle)
                    </legend>

                    <hr />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CustomerViewModel.FirstName" class="control-label"></label>
                        <input asp-for="CustomerViewModel.FirstName" class="form-control" />
                        <span asp-validation-for="CustomerViewModel.FirstName" class="text-danger"></span>
                    </div>
                    &ensp;
                    <div class="form-group">
                        <label asp-for="CustomerViewModel.LastName" class="control-label"></label>
                        <input asp-for="CustomerViewModel.LastName" class="form-control" />
                        <span asp-validation-for="CustomerViewModel.LastName" class="text-danger"></span>
                    </div>
                    &ensp;
                    <div class="form-group">
                        <label asp-for="CustomerViewModel.NationalCode" class="control-label"></label>
                        <input asp-for="CustomerViewModel.NationalCode" class="form-control" />
                        <span asp-validation-for="CustomerViewModel.NationalCode" class="text-danger"></span>
                    </div>
                    &ensp;
                    <div class="form-group">
                        <label asp-for="CustomerViewModel.TellNumber" class="control-label"></label>
                        <input asp-for="CustomerViewModel.TellNumber" class="form-control" />
                        <span asp-validation-for="CustomerViewModel.TellNumber" class="text-danger"></span>
                    </div>
                    &ensp;
                    <div class="form-group">
                        <label asp-for="CustomerViewModel.Address" class="control-label"></label>
                        <input asp-for="CustomerViewModel.Address" class="form-control" />
                        <span asp-validation-for="CustomerViewModel.Address" class="text-danger"></span>
                    </div>
                </fieldset>

                <hr class="mt-4" />

                <div class="text-center">
                    <div class="d-grid gap-2 mb-3">
                        <input type="submit" value="@(pageTitle)" class="btn btn-primary" />
                    </div>
                    <div>
                        <a asp-page="Index" class="text-decoration-none">
                            @(Resources.ButtonCaptions.BackToList)
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
